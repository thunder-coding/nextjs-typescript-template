      "reAttach": true,
      "name": "Launch Firefox",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "command": "yarn dev",
      "name": "Start the dev server",
      "request": "launch",
      "type": "node-terminal"
    },
		{
			"name": "Launch Edge",
			"request": "launch",
			"type": "pwa-msedge",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Launch Chrome",
			"request": "launch",
			"type": "pwa-chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		}
	]
}
